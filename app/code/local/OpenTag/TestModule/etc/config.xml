<?xml version="1.0"?>
<config>
    <modules>
        <OpenTag_TestModule>
            <version>1.0.0</version>
        </OpenTag_TestModule>
    </modules>

    <global>
        <blocks>
            <testmodule>
                <class>OpenTag_TestModule_Block</class>
            </testmodule>
        </blocks>

        <blocks>
            <testmodule_adminhtml>
                <class>OpenTag_TestModule_Block_AdminHtml</class>
            </testmodule_adminhtml>
        </blocks>

        <helpers>
            <OpenTag_TestModule>
                <class>OpenTag_TestModule_Helper</class>
            </OpenTag_TestModule>
        </helpers>

        <models>
            <testmodule>
                <class>OpenTag_TestModule_Model</class>
                <resourceModel>testmodule_resource</resourceModel>
            </testmodule>
            <testmodule_resource>
                <class>OpenTag_TestModule_Model_Resource</class>
                <entities>
                    <testcustommodel>
                        <!-- Table name -->
                        <table>test_contact_form</table>
                    </testcustommodel>
                </entities>
            </testmodule_resource>
        </models>

        <resources>
            <opentag_testmodule_setup>
                <setup>
                    <module>OpenTag_TestModule</module>
                </setup>
            </opentag_testmodule_setup>
        </resources>

        <events>
            <custom_model_sendemail>
                <observers>
                    <opentag_testmodule_model_observer>
                        <type>singleton</type>
                        <class>OpenTag_TestModule_Model_Observer</class>
                        <method>eventSendEmail</method>
                    </opentag_testmodule_model_observer>
                </observers>
            </custom_model_sendemail>
        </events>

    </global>
    <frontend>
        <routers>
            <opentag_testmodule>
                <use>standard</use>
                <args>
                    <module>OpenTag_TestModule</module>
                    <frontName>test_module</frontName>
                </args>
            </opentag_testmodule>
        </routers>
        <!--
        <layout>
            <updates>
                <opentag_testmodule>
                    <file>opentag_testmodule.xml</file>
                </opentag_testmodule>
            </updates>
        </layout>
        -->
    </frontend>

    <admin>
        <routers>
            <opentag_testmodule>
                <use>admin</use>
                <args>
                    // Where to find adminhtml controllers
                    <module>OpenTag_TestModule</module>
                    // Actual url
                    <frontName>admin_testmodule</frontName>
                </args>
            </opentag_testmodule>
        </routers>
    </admin>

</config>