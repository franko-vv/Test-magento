<?xml version="1.0"?>
<config>
    <modules>
        <OpenTag_TestModule>
            <version>1.0.0</version>
        </OpenTag_TestModule>
    </modules>
    <global>

        <blocks>
            <testmodule>
                <class>OpenTag_TestModule_Block</class>
            </testmodule>
        </blocks>

        <models>
            <testmodule>
                <class>OpenTag_TestModule_Model</class>
                <resourceModel>testmodule_resource</resourceModel>
            </testmodule>
            <testmodule_resource>
                <class>OpenTag_TestModule_Model_Resource</class>
                <entities>
                    <testcustommodel>
                        <!-- Table name -->
                        <table>ivision_contact_form</table>
                    </testcustommodel>
                </entities>
            </testmodule_resource>
        </models>

        <resources>
            <opentag_testmodule_setup>
                <setup>
                    <module>OpenTag_TestModule</module>
                </setup>
            </opentag_testmodule_setup>
        </resources>

        <events>
            <eventSendEmail>
                <observers>
                    <OpenTag_TestModule_my_custom_event_observer>
                        <type>singleton</type>
                        <class>TestModule/observer</class>
                        <method>eventSendEmail</method>
                    </OpenTag_TestModule_my_custom_event_observer>
                </observers>
            </eventSendEmail>
        </events>

    </global>
    <frontend>
        <routers>
            <opentag_testmodule>
                <use>standard</use>
                <args>
                    <module>OpenTag_TestModule</module>
                    <frontName>test_module</frontName>
                </args>
            </opentag_testmodule>
        </routers>
